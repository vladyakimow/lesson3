#include <iostream>
#include <cstdlib>

using namespace std;

int main (){
const int SIZE = 20;
int a[SIZE];
int k=0,min;
for (int i=0; i< SIZE; i++){
    a[i] = 1 + rand() % 10;
}
    
for (int i= 0; i < SIZE; i++){
    cout << a[i] <<"  ";
}
       
 for (int i= 0; i < SIZE; i++){
    min=10  
      if (a[i]<min){
        min=a[i];
    }
}
 for (int i= 0; i < SIZE; i++){
    if (a[i]==min){
    k++;            
}

cout <<"minimal'noe= " << min << "\n";
cout <<"ih" << k << "shtuk";
return 0;
}        
